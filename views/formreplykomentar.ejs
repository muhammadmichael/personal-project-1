<%- include('templates/header')-%>

    <div class="container">
        <h1>Form Reply Komentar</h1>
        <br>

        <hr class="my-0" style="height: 1px;" />
        <div class="card-body p-4">
            <div class="d-flex flex-start">
                <img class="rounded-circle shadow-1-strong me-3"
                    src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"
                    alt="avatar" width="60" height="60" />
                <div>
                    <h6 class="fw-bold mb-1">User</h6>
                    <div class="d-flex align-items-center mb-3">
                        <p class="mb-0">
                            <%= komentar.createdAt.toString().substring(0, 24) %>
                                <span class="badge bg-success">Approved</span>
                        </p>
                    </div>
                    <p class="mb-0">
                        Re: <%= komentar.text %>
                    </p>
                    <br>
                </div>

            </div>
        </div>

        <hr class="my-0" style="height: 1px;" />
        <br>

        <form method="POST" action="/komentar/reply/<%= komentar.id %>">
            <div class="mb-3">
                <label for="text" class="form-label">Reply</label>
                <input type="text" class="form-control" name="text" required id="text">
            </div>
            <button type="submit" class="btn btn-primary">Reply Komentar</button>
        </form>
    </div>

<%- include('templates/footer')-%>