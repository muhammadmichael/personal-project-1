<%- include('templates/header')-%>

    <div class="container">
        <div class="row">
            <div class="col-sm-8 mt-3">
                <h1>Form Tambah Berita</h1>

                <form class="mt-4" action="/komentar/tambah/<%= idBerita %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label for="title">Judul</label>
                        <input type="text" class="form-control" name="title" required id="title">
                    </div>
                    <div class="form-group mb-3">
                        <label for="title">Highlight</label>
                        <input type="text" class="form-control" name="highlight" required id="highlight">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <hr />
    </div>

    <%- include('templates/footer')-%>